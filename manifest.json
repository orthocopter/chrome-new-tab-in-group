{
    "name": "New Tab in Active Group",
    "version": "0.1.0",
    "description": "Shortcut to create a new tab in the active group",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "/assets/icon-16.png",
        "32": "/assets/icon-32.png",
        "48": "/assets/icon-48.png",
        "128": "/assets/icon-128.png"
    },
    "commands": {
        "newTabInGroup": {
            "suggested_key": "Ctrl+T",
            "description": "Create new tab in active group"
        }
    }
}
